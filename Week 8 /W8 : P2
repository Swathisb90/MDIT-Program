package MobileAutomation;

import java.net.MalformedURLException;
import java.net.URL;
import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;

import io.appium.java_client.TouchAction;
import io.appium.java_client.android.AndroidDriver;
import io.appium.java_client.android.options.UiAutomator2Options;
import io.appium.java_client.touch.TapOptions;
import io.appium.java_client.touch.offset.ElementOption;

@SuppressWarnings("deprecation")
public class tapActionTest {

	//@SuppressWarnings("deprecation")
	public void mainTest() throws MalformedURLException {

		//Initializing server using Variable.
		String urlofAppiumServer = "http://127.0.0.1:4723";
		URL appiumServerUrl = new URL(urlofAppiumServer);

		//Instantiating UIautomator driver
		UiAutomator2Options options = new UiAutomator2Options();

		//Using options class setting the virtual device and specifying the location of application to launch. 
		options.setDeviceName("Pixel_API_24");
		options.setApp("D:\\Workspace\\appium\\src\\test\\resources\\ApiDemos-debug.apk");
		// Instantiating android driver
		AndroidDriver driver = new AndroidDriver(appiumServerUrl, options);
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(10));
		WebElement ele =driver.findElement(By.xpath(""));

		@SuppressWarnings("rawtypes")
		TouchAction touchAction = new TouchAction(driver);
		TapOptions tape =new TapOptions();
		touchAction.tap(tape.withElement((ElementOption)ele)).perform();
		driver.terminateApp("");


	}



}
